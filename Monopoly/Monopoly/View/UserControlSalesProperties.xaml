        <DataTemplate DataType="{x:Type Cells:TrainStation}">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Station de train : " FontWeight="Bold" FontSize="16"></TextBlock>
                <TextBlock Text="{Binding Title}" FontSize="16"></TextBlock>
            </StackPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type Cells:PublicService}" >
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Service Public : " FontWeight="Bold" FontSize="16"></TextBlock>
                <TextBlock Text="{Binding Title}" FontSize="16"></TextBlock>
            </StackPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type Cells:Land}" >
            <StackPanel Orientation="Vertical" Margin="5">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="20" Height="20" Fill="{Binding LandGroup.Color}" Margin="0,0,10,0"></Rectangle>
                    <TextBlock Text="Terrain : " FontWeight="Bold" FontSize="16" VerticalAlignment="Center"></TextBlock>
                    <TextBlock Text="{Binding Title}" FontSize="16" VerticalAlignment="Center"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Nb Maison : " FontSize="12" Foreground="Gray" Margin="30,0,0,0" ></TextBlock>
                    <TextBlock Text="{Binding NbHouse}" FontSize="12" Foreground="Gray"></TextBlock>
                    <TextBlock Text="; "></TextBlock>
                    <TextBlock Text="Nb Hotel : " FontSize="12" Foreground="Gray"></TextBlock>
                    <TextBlock Text="{Binding NbHotel}" FontSize="12" Foreground="Gray"></TextBlock>
                </StackPanel>
                
            </StackPanel>
            
        </DataTemplate>
        

    </UserControl.Resources>
    
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="black" Opacity="0.5"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Background="White" Grid.Column="1" Grid.Row="1">
            <DockPanel DockPanel.Dock="Top">
                <TextBlock FontSize="28" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">Vous n'avez plus assez d'argent !</TextBlock>
            </DockPanel>

            <StackPanel DockPanel.Dock="Bottom" Margin="10" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Click="OnClick_Continu" Margin="5"  Width="200">Continuer</Button>
                <Button Click="OnClick_GiveUp" Margin="5" Width="200">Abandonner le jeu</Button>
            </StackPanel>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Margin="30,0"  Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Liste des propriétés :" FontSize="16" Margin="10"></TextBlock>
                    <ScrollViewer VerticalScrollBarVisibility="auto">
                        <ListView x:Name="ListBoxProperties" BorderThickness="1" BorderBrush="Black"
                            SelectedIndex="{Binding Path=IndexSelected, Mode=TwoWay}"
                            SelectedItem="{Binding Path=PropertySelected, Mode=TwoWay}"
                            ItemsSource="{Binding Path=ListOfProperties, Mode=TwoWay}" Height="300" SelectionChanged="onSelecionChangeListeViewProperties">

                        </ListView>
                    </ScrollViewer>
                </StackPanel>

                <Grid Grid.Column="2" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="2*"/>                        
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="{Binding Path=PropertySelected.Title}"></TextBlock>
                   
                    <ContentControl  x:Name="AlertNotification"  Margin="10" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center"></ContentControl>
                    
                    <StackPanel Margin="10" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Button Margin="10" Click="OnClick_Mortgage" IsEnabled="{Binding Path=BtnMortgageEnable}">Hyptotéqué</Button>
                        <Button Margin="10" Click="OnClick_SellHotel" IsEnabled="{Binding Path=BtnSellHotelEnable}">Vendre Hotel</Button>
                        <Button Margin="10" Click="OnClick_SellHouse" IsEnabled="{Binding Path=BtnSellHouseEnable}">Vendre Maison</Button>
                        <Button Margin="10" Click="OnClick_Exchange" IsEnabled="{Binding Path=BtnExchangeEnable}">Faire un Echange</Button>
                    </StackPanel>
                </Grid>
                
            </Grid>
        </DockPanel>


    </Grid>
</UserControl>
