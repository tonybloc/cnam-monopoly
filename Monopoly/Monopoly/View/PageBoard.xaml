<Page x:Class="Monopoly.View.PageBoard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Monopoly.View"
      mc:Ignorable="d" 
      Height="{DynamicResource {x:Static SystemParameters.PrimaryScreenHeightKey}}"
      Width="{DynamicResource {x:Static SystemParameters.PrimaryScreenWidthKey}}"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageBoard">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Monopoly;component/Resources/Pictures/wood.png"/>
        </Grid.Background>
        <!--Window-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="Black" BorderThickness="2" Margin="5" Width="{DynamicResource {x:Static SystemParameters.PrimaryScreenHeightKey}}" >
            <!-- Board (left side)-->
            <Grid ShowGridLines="True" Name="Board" Background="Beige" >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="9*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="9*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Column="2" Grid.Row="2" x:Name="BoardPanelStart"></Grid>
                <Grid Grid.Column="1" Grid.Row="3" x:Name="BoardPanelBottom"></Grid>
                <Grid Grid.Column="0" Grid.Row="2" x:Name="BoardPanelJail"></Grid>
                <Grid Grid.Column="0" Grid.Row="1" x:Name="BoardPanelLeft"></Grid>
                <Grid Grid.Column="0" Grid.Row="0" x:Name="BoardPanelParking"></Grid>
                <Grid Grid.Column="1" Grid.Row="0" x:Name="BoardPanelTop"></Grid>
                <Grid Grid.Column="2" Grid.Row="0" x:Name="BoardPanelGoToJail"></Grid>
                <Grid Grid.Column="2" Grid.Row="1" x:Name="BoardPanelRight"></Grid>
                <Grid Grid.Column="1" Grid.Row="1" x:Name="BoardPanelCenter"></Grid>

                <!--Land description-->
                <Grid Grid.Column="1" Grid.Row="1" x:Name="Land" Width="200" Height="300" Background="White" Visibility="Hidden">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="9*"/>
                    </Grid.RowDefinitions>

                    <Label x:Name="lblLandTitle" Grid.Row="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

                    <Grid Grid.Row="1" Margin="10" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label x:Name="lblOwner" Grid.Row="0" HorizontalAlignment="Left" Content="Propriétaire :" VerticalAlignment="Top" Foreground="Black"/>
                        <Label x:Name="lblOwnerValue" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left"/>
                        <Label x:Name="lblBuyingPrice" Grid.Row="1" HorizontalAlignment="Left" Content="Prix d'achat :" VerticalAlignment="Top" Foreground="Black"/>
                        <Label x:Name="lblBuyingPriceValue" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left"/>
                        <Label x:Name="lblRent" Grid.Row="2" HorizontalAlignment="Left" Content="Loyers :" VerticalAlignment="Top" Foreground="Black"/>
                        <Label x:Name="lblLand" Grid.Row="3" HorizontalAlignment="Left" Content="- Terrain nu : " VerticalAlignment="Top" Foreground="Black"/>
                        <Label x:Name="lblLandValue" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left"/>
                        <Label x:Name="lblHouse1" Grid.Row="4" HorizontalAlignment="Left" Content="- Avec 1 maison :" VerticalAlignment="Top" Foreground="Black"/>
                        <Label x:Name="lblHouse1Value" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left"/>
                        <Label x:Name="lblHouse2" Grid.Row="5" HorizontalAlignment="Left" Content="- Avec 2 maisons :" VerticalAlignment="Top" Foreground="Black"/>
                        <Label x:Name="lblHouse2Value" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left"/>
                        <Label x:Name="lblHouse3" Grid.Row="6" HorizontalAlignment="Left" Content="- Avec 3 maisons :" VerticalAlignment="Top" Foreground="Black"/>
                        <Label x:Name="lblHouse3Value" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left"/>
                        <Label x:Name="lblHouse4" Grid.Row="7" HorizontalAlignment="Left" Content="- Avec 4 maisons :" VerticalAlignment="Top" Foreground="Black"/>
                        <Label x:Name="lblHouse4Value" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Left"/>
                        <Label x:Name="lblMotel" Grid.Row="8" HorizontalAlignment="Left" Content="- Avec hôtel :" VerticalAlignment="Top" Foreground="Black"/>
                        <Label x:Name="lblMotelValue" Grid.Row="8" Grid.Column="1" HorizontalAlignment="Left"/>
                        <Label x:Name="lblMortgage" Grid.Row="9" HorizontalAlignment="Left" Content="Valeur hypothécaire :" VerticalAlignment="Top" Foreground="Black"/>
                        <Label x:Name="lblMortgageValue" Grid.Row="9" Grid.Column="1" HorizontalAlignment="Left"/>
                    
                    </Grid>

                    <Border BorderThickness="2" BorderBrush="Black" />
                    <Border BorderThickness="2" BorderBrush="Black" Grid.ColumnSpan="2" Grid.RowSpan="2" />
                </Grid>

                <Grid Grid.Column="1" Grid.Row="1" x:Name="Card" Width="200" Height="300" Background="White" Visibility="Hidden">
                    <Grid Margin="10">
                        <StackPanel>
                            <Image x:Name="CardIcon" VerticalAlignment="Center" Height="100"></Image>
                            <Label x:Name="lblCardTitle" Grid.Row="0" HorizontalContentAlignment="Center" Foreground="Black" Margin="0,20,0,0"/>
                            <StackPanel Orientation="Vertical" Margin="0,50,0,0">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Label x:Name="lblPurchasePrice" Content="Valeur d'achat :" Foreground="Black"/>
                                    <Label x:Name="lblPurchasePriceValue"></Label>                             
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center">
                                    <Label x:Name="lblMortgagePrice" Content="Valeur hypothécaire :" Foreground="Black"/>
                                    <Label x:Name="lblMortgagePriceValue"></Label>
                                </StackPanel>
                            </StackPanel>
                            
                        </StackPanel>
                        <Border BorderThickness="2" BorderBrush="Black" />
                    </Grid>
                    <Border BorderThickness="2" BorderBrush="Black" />
                </Grid>
            </Grid>
        </Border>
        <Grid Grid.Column="1" Width="Auto">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" >
                <Button x:Name="btnDice" ToolTip="Lancer les dés" Click="onClickDices" HorizontalAlignment="Center">
                    <Image Source="../Resources/Pictures/dices.png"/>
                </Button>
            </StackPanel>
            <Frame Grid.Column="1" Grid.Row="1" x:Name="DicesContent" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>

    </Grid>

</Page>
