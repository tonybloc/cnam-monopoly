<Page x:Class="Monopoly.View.PageSinglePlayerCreation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Monopoly.View"
      xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      Height="{DynamicResource {x:Static SystemParameters.PrimaryScreenHeightKey}}"
      Width="{DynamicResource {x:Static SystemParameters.PrimaryScreenWidthKey}}"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageSinglePlayerCreation">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- Creation of player -->
        <Grid Grid.Column="0" Grid.Row="0">
            <Grid.Background>
                <ImageBrush ImageSource="/Monopoly;component/Resources/Pictures/wood.png"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1" Grid.Row="1">

                <!-- Creation of player -->
                <StackPanel Background="AliceBlue" HorizontalAlignment="Center" VerticalAlignment="Center">

                    <!-- Stack Panel Effect -->
                    <StackPanel.Effect>
                        <DropShadowEffect ShadowDepth="2"/>
                    </StackPanel.Effect>

                    <!-- Title -->
                    <Label HorizontalAlignment="Center" Content="Création du joueur" FontSize="32" Margin="30,20" FontStyle="Normal" FontWeight="Bold"/>

                    <!-- Form to create player -->
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                        <TextBox x:Name="TextBox_Pseudo" Text="Your Pseudo ... " GotFocus="onGotFocus_Pseudo" LostFocus="onLostFocus_Pseudo"  Margin="0,10" FontSize="16" TextAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,10,10,10">
                            <Button x:Name="btnPreviousColor" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="Black" Margin="10" Click="onClickPreviousColor">
                                <MaterialDesign:PackIcon Height="30" Width="30" Kind="ChevronLeft"/>
                            </Button>

                            <Ellipse x:Name="PawnIcon"  Fill="#FFF" HorizontalAlignment="Left" Height="60" Stroke="Black" Width="60" />

                            <Button x:Name="btnNextColorRight" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="Black" Margin="10" Click="onClickNextColor">
                                <MaterialDesign:PackIcon Height="30" Width="30" Kind="ChevronRight"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <!-- Actions -->
                    <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                        <Button x:Name="btnValidate" Margin="10" Width="75" Click="onClickValidate" Foreground="Black">
                            <MaterialDesign:PackIcon Kind="Done" />
                        </Button>
                        <Button x:Name="btnCancel" Margin="10" Width="75" Click="onClickCancel" Foreground="Black">
                            <MaterialDesign:PackIcon Kind="Cancel"/>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>

        </Grid>

        <!-- Notification -->
        <ContentControl x:Name="NotificationsPanel"></ContentControl>
        
    </Grid>
    
</Page>
