                    <TextBlock FontSize="24" TextAlignment="Center" TextWrapping="Wrap" Text="{Binding Title, Mode=TwoWay}"/>
                    <TextBlock FontSize="18" TextAlignment="Center" TextWrapping="Wrap" Text="{Binding Description, Mode=TwoWay}"/>
                </StackPanel>

                <!-- Actions -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Button Width="150" Height="40" Click="CardMove_OnClickValidate" FontSize="16">Ok</Button>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate DataType="{x:Type Model:CardMoveToCell}">
            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.Background>
                    <SolidColorBrush Color="white"/>
                </Grid.Background>
                <Grid.Effect>
                    <DropShadowEffect ShadowDepth="2"/>
                </Grid.Effect>

                <Grid.RowDefinitions>
