                    <Button Width="150" Height="40" Click="CardUpdateMoneyAccordingBuilds_OnClickValidate" FontSize="16">Ok</Button>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    
      
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="black" Opacity="0.5"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ContentControl Grid.Column="1" Grid.Row="1" Content="{Binding Path=CurrentCard}"></ContentControl>
        

    </Grid>
</UserControl>
