                </Grid.RowDefinitions>

                <!--  Dialog information -->
                <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center"  VerticalAlignment="Center" Margin="50">
                    <TextBlock FontSize="24" TextAlignment="Center" TextWrapping="Wrap" Text="{Binding Title, Mode=TwoWay}"/>
