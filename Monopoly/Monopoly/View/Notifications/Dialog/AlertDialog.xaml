<UserControl x:Class="Monopoly.View.Notifications.Dialog.AlertDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Monopoly.View.Notifications.Dialog"
             mc:Ignorable="d">
    <Grid>
        <Border CornerRadius="5" Padding="10" Opacity="0.8" Background="{Binding Path=BackgroundColor}" >
        </Border>
        <TextBlock Padding="15" FontSize="14" Text="{Binding Path=Message}">
        </TextBlock>

    </Grid>
</UserControl>
